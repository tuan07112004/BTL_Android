<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Quyền Internet & kiểm tra mạng -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ok"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/ok"
        android:supportsRtl="true"
        android:theme="@style/Theme.Oke"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity android:name=".activity.ChiTietActivity" />

        <activity
            android:name=".activity.KhuyenMaiActivity"
            android:exported="false" />
        <activity
            android:name=".activity.XemDonActivity"
            android:exported="false" />
        <activity
            android:name=".activity.LienHeActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ThongtinActivity"
            android:exported="false" />
        <activity
            android:name=".activity.LaptopActivity"
            android:exported="false" />
        <activity
            android:name=".activity.DienThoaiActivity"
            android:exported="false" /> <!-- ✅ Màn hình splash là Launcher -->
        <activity
            android:name=".activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- ✅ Màn hình đăng nhập -->
        <activity
            android:name=".activity.LoginActivity"
            android:exported="true" /> <!-- ✅ Màn hình đăng ký -->
        <activity
            android:name=".activity.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".activity.AdminHome"
            android:exported="true" /> <!-- ✅ Trang chủ (không cần intent-filter) -->
        <activity
            android:name=".activity.HomeActivity"
            android:exported="true" />


    </application>

</manifest>